<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/space"
    app:contentInsetStart="@dimen/space"
    app:contentInsetEnd="@dimen/space"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageButton
        android:id="@+id/tbBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:background="@drawable/button_invis"
        android:layout_marginEnd="@dimen/space"


        />
    <TextView
        android:id="@+id/tbTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Heading3"
        android:layout_gravity="center_vertical"
        tools:text="Add Title"/>

    <TextView
        android:id="@+id/tbKategori"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        style="@style/Action"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:paddingVertical="4dp"
        android:paddingHorizontal="@dimen/space_8"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="@color/blue_base"
        tools:text="Add Title"/>

    <ImageButton
        android:id="@+id/tbMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:visibility="gone"
        android:src="@drawable/ic_more"
        android:background="@drawable/button_invis"
        />
    <ImageButton
        android:id="@+id/tbArchive"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/ic_archive"
        android:background="@drawable/button_invis"
        app:tint="@color/black" />
</androidx.appcompat.widget.Toolbar>