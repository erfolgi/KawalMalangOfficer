<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_bg"
    android:elevation="@dimen/space_8"
    android:layout_margin="@dimen/space_4"
    android:layout_marginEnd="@dimen/space_8"
    android:padding="@dimen/space_8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/btEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_10"
            app:drawableStartCompat="@drawable/ic_edit_sm"
            android:text="Edit laporan"
            android:background="@drawable/button_invis"
            style="@style/Action"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/space"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/btDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_10"
            android:drawableTint="@color/primary_main"
            app:drawableStartCompat="@drawable/ic_trash_sm"
            android:text="Hapus laporan"
            android:background="@drawable/button_invis"
            style="@style/Action"
            android:textColor="@color/primary_main"
            android:drawablePadding="@dimen/space"
            />

        <TextView
            android:id="@+id/txEmpty"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_10"
            android:text="Tidak ada menu"
            android:textAlignment="center"
            style="@style/Bodytext"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/space"
            />
    </LinearLayout>
</LinearLayout>