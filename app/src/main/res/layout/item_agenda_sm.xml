<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/bt_intent"
    android:background="@drawable/button_invis"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/space"
    android:elevation="@dimen/space_4"
    android:orientation="vertical"
    android:padding="@dimen/space">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:cardCornerRadius="@dimen/corner_radius"
        android:layout_marginBottom="12dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/imFoto"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:src="@drawable/ic_camera"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txTitle"
        style="@style/Subtitle_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Laporan Diterima" />


    <TextView
        android:id="@+id/txDate"
        style="@style/Body_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_4"
        android:drawablePadding="@dimen/space_4"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="Selasa, 12 Juni 2022 10:25"
        android:textColor="@color/grey3" />


</LinearLayout>