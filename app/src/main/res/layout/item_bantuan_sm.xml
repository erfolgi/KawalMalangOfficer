<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/btBantuan"
    android:layout_width="wrap_content"
    android:background="@drawable/button_invis"
    android:layout_height="wrap_content"

    android:paddingVertical="@dimen/space_8"
    android:paddingHorizontal="@dimen/space"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imIcon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_menu_pengaduan"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="8dp"/>
            <TextView
                android:id="@+id/txTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Body_2"
                android:textAlignment="center"
                android:text="Pengaduan"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/txSoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segera Hadir!"
            android:background="@drawable/rounded_bg"
            android:paddingHorizontal="@dimen/space_8"
            android:paddingVertical="4dp"
            android:textSize="11sp"
            android:backgroundTint="@color/red_base"
            android:textColor="@color/white"
            android:textAlignment="center"
            style="@style/ActionSmall"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>