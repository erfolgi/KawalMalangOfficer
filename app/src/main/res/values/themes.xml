<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PanicButtonPolresJakarta" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_base</item>
        <item name="colorPrimaryVariant">@color/primary_base</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_base</item>
        <item name="colorSecondaryVariant">@color/primary_base</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#0000</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:screenOrientation">landscape</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="android:includeFontPadding">false</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/AppTextView</item>
    </style>

